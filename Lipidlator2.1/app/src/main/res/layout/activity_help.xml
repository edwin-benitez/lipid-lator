<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="teamtriplej.com.lipidlator21.HelpActivity"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/white"
        android:id="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/scroll_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/about_scroll_bar"
        android:scrollbarStyle="outsideInset"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpstep1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/help1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/helpimage1"
                app:layout_constraintTop_toBottomOf="@id/textView"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:background="@color/violet"
                android:id="@+id/view3"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/help1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpstep2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view3"
                />
            <ImageView
                android:id="@+id/help2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/helpimage4"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                android:adjustViewBounds="true"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:background="@color/violet"
                android:id="@+id/view5"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/help2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpstep3"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view5"
                />
            <ImageView
                android:id="@+id/help3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/helpimage3"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:background="@color/violet"
                android:id="@+id/view6"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/help3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpstep4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view6"
                />
            <ImageView
                android:id="@+id/help4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/helpimage5"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/got_it"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:background="@color/violet"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/help4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="45dp"
                />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
