<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onerom.lipidlator.Sphingolipids_Result_Activity">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:text="@string/Home"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formula_sphinolipids_input"
        app:layout_constraintVertical_bias="0.794"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/SphinBtn"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/headSphin"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/sphingolipids"
        android:textStyle="bold"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spnSphinIon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSphinIon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ion_type"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="-20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/headSphin" />

    <Spinner
        android:id="@+id/spnSphinIon"
        android:layout_width="320dp"
        android:layout_height="22dp"
        android:layout_marginRight="8dp"
        android:entries="@array/ion_array"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvSphinIon"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="68dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvSphinHeadGroup"
        android:layout_width="165dp"
        android:layout_height="28dp"
        android:text="@string/head_group_type"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteY="106dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spnSphinHeadGroup"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:entries="@array/headGroup_array_values"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spnSphinIon"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="103dp"
        tools:layout_editor_absoluteX="176dp"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/tvSphinBase"
        android:layout_width="181dp"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/sphingoid_base"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSphinHeadGroup" />

    <Spinner
        android:id="@+id/spnSphinBase"
        android:layout_width="176dp"
        android:layout_height="31dp"
        android:layout_marginRight="0dp"
        android:entries="@array/sphingoid_array_values"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvSphinBase"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/spnSphinHeadGroup"
        tools:layout_editor_absoluteX="201dp" />

    <TextView
        android:id="@+id/tvN_acyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:text="@string/n_acyl"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSphinBase" />

    <Spinner
        android:id="@+id/spnN_acyl"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_marginRight="8dp"
        android:entries="@array/n_acyl_array_values"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvN_acyl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spnSphinBase"
        app:layout_constraintHorizontal_bias="0.864" />

    <Button
        android:id="@+id/SphinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/black"
        android:text="@string/btnGo_back"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFormula"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.578"
        android:layout_marginLeft="59dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvMZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/m_z_ratio_sphingolipids"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        tools:ignore="RtlHardcoded"
        app:layout_constraintRight_toLeftOf="@+id/M_Z_Ratio_Input"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/tvN_acyl" />

    <EditText
        android:id="@+id/M_Z_Ratio_Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="245dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Abbreviation_sphingolipids"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:text="@string/abbreviation"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMZ" />

    <EditText
        android:id="@+id/abbreviation_sphinolipids_input"
        android:layout_width="187dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="299dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/formula_sphinolipids_input"
        android:layout_width="187dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/tvFormula"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="85dp"
        android:text="@string/formula_shingolipids_result"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMZ"
        android:layout_marginStart="-2dp"
        app:layout_constraintRight_toLeftOf="@+id/formula_sphinolipids_input"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
